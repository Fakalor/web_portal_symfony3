{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.product_category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.product_category_list'|trans }}</h1>
    <a href="{{ url('product_category_new') }}" title="{{ 'action.new'|trans }}">
        {{ 'action.new'|trans }}
    </a>
    {% if pagination is defined and pagination|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'pc.id' ) }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category_name'|trans, 'pc.categoryName' ) }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for productCategory in pagination %}
                <tr>
                    <td>{{ productCategory.id }}</td>
                    <td>{{ productCategory.categoryName }}</td>
                    <td>
                        <a href="{{ url('product_category_view', {id: productCategory.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                        <a href="{{ url('product_category_edit', {id: productCategory.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                        <a href="{{ url('product_category_delete', {id: productCategory.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}